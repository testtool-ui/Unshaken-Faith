<resources>

    <!-- Base application theme -->
    <style name="Theme.UnshakenFaith" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color used throughout the app -->
        <item name="colorPrimary">@color/hero_background</item>
        <item name="colorPrimaryDark">@color/primary_text</item>
        <item name="colorAccent">@color/button_background</item>

        <!-- Customize action bar, status bar, and toolbar colors -->
        <item name="android:statusBarColor">@color/primary_text</item>

        <!-- Text appearance for headlines, body, etc. -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Font style -->
        <item name="android:fontFamily">@font/sans_serif</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Light theme example -->
    <style name="Theme.UnshakenFaith.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/hero_background</item>
        <item name="colorPrimaryDark">@color/primary_text</item>
        <item name="colorAccent">@color/button_background</item>
    </style>

    <!-- Dark theme example -->
    <style name="Theme.UnshakenFaith.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hero_background</item>
        <item name="colorPrimaryDark">@color/primary_text</item>
        <item name="colorAccent">@color/button_background</item>
    </style>

    <!-- Customize button styles -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
